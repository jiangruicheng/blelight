<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.jiangruicheng.btlight.fragment.OtherAppFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp">

        <ImageView
            android:id="@+id/wangyi"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="42dp"
            android:background="@drawable/wangyi_logo"
            />

        <ImageView
            android:id="@+id/qq"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="42dp"
            android:background="@drawable/qq_logo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp">

        <ImageView
            android:id="@+id/kugou"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="42dp"
            android:background="@drawable/kugou_logo"
            />

        <ImageView
            android:id="@+id/kuwo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="42dp"
            android:background="@drawable/kuwo_logo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp">

        <ImageView
            android:id="@+id/spotify"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="42dp"
            android:background="@drawable/spotify_logo"
            />
    </LinearLayout>

</LinearLayout>
